<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KINO V2</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  
  <body>
    <!-- <a href="/views/about.ejs">About</a> -->
    <a name="top"></a>
    <!-- Navbar Section -->
    <nav class="navbar">
      <div class="navbar__container">
        <a href="index.ejs" id="navbar__logo">KINO</a>
        <div class="navbar__toggle" id="mobile-menu">
          <span class="bar"></span> <span class="bar"></span>
          <span class="bar"></span>
        </div>
        <ul class="navbar__menu">
          <li class="navbar__item">
            <form action='searchResult' method="POST"">
              <input id="searchTerm" name="searchTerm" type="text" />
              <input type="submit" value="Search" oninput="searchForMovie()"/>
              <p id="requestText"></p>
              <!-- <textarea name="result" id="" cols="30" rows="10"></textarea> -->
            </form>
          <li class="navbar__item">
            <a href="popularMovies" class="navbar__links" id="movie-page">Movies</a>

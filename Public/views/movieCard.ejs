          <li class="navbar__item">
            <a href="popularTVShows" class="navbar__links" id="tvshow-page">TV Shows</a>
          </li>
          <li class="navbar__item">
            <a href="top250" class="navbar__links" id="top250-page">Top 250</a>
          </li>
          <li class="navbar__btn">
            <a href="#log-in" class="button" id="login">LogIn</a>
          </li>
        </ul>
      </div>
    </nav>
   
        
    <div id="result"><%= result.Title %></div>
    <div id="result"><%= result.Plot %></div>
    <div id="result"><%= result.Year %></div>
    <div id="result"><%= result.Director %></div>
    <div id="result"><%= result.Metascore %></div>
    <div id="result"><%= result.imdbRating %></div>
    <img src="<%- result.Poster %>">
    <script type="text/javascript" src="/js/displayFunctions.js"></script>
    <script type="text/javascript" src="/main.js"></script>
    
  </body>
    
</html>
